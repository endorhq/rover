{
  "name": "rover-workspace",
  "version": "1.0.0",
  "author": "The Endor Team <hello@endor.dev>",
  "engines": {
    "npm": "10.9.2",
    "node": "22.17.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "run-p -l dev:*",
    "dev:schemas": "npm run dev --workspace=./packages/schemas",
    "dev:common": "npm run dev --workspace=./packages/common",
    "dev:telemetry": "npm run dev --workspace=./packages/telemetry",
    "dev:agent": "npm run dev --workspace=./packages/agent",
    "dev:cli": "npm run dev --workspace=./packages/cli",
    "build": "run-s -l build:*",
    "build:schemas": "npm run build --workspace=./packages/schemas",
    "build:common": "npm run build --workspace=./packages/common",
    "build:agent": "npm run build --workspace=./packages/agent",
    "build:telemetry": "npm run build --workspace=./packages/telemetry",
    "build:extension": "npm run build --workspace=./packages/extension",
    "build:cli": "npm run build --workspace=./packages/cli",
    "package": "run-s -l package:*",
    "package:extension": "npm run package --workspace=./packages/extension",
    "package:cli": "npm run package --workspace=./packages/cli",
    "check": "run-s -l check:*",
    "check:schemas": "npm run check --workspace=./packages/schemas",
    "check:common": "npm run check --workspace=./packages/common",
    "check:agent": "npm run check --workspace=./packages/agent",
    "check:telemetry": "npm run check --workspace=./packages/telemetry",
    "check:extension": "npm run check --workspace=./packages/extension",
    "check:cli": "npm run check --workspace=./packages/cli",
    "test": "run-p -l test:*",
    "test:extension": "npm run test --workspace=./packages/extension",
    "test:cli": "npm run test --workspace=./packages/cli",
    "test:agent": "npm run test --workspace=./packages/agent",
    "test:common": "npm run test --workspace=./packages/common",
    "test:schemas": "npm run test --workspace=./packages/schemas",
    "format": "prettier --write .",
    "postinstall": "run-s -l build:schemas build:common build:telemetry"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5"
  }
}
