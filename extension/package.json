{
  "name": "endor-rover",
  "displayName": "Endor Rover",
  "description": "Collaborate with AI agents to complete any task",
  "version": "0.0.1",
  "publisher": "endor",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "icon": "media/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Rover",
      "properties": {
        "rover.cliPath": {
          "type": "string",
          "default": "rover",
          "description": "Path to the Rover CLI executable"
        },
        "rover.autoRefreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds (0 to disable)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rover",
          "title": "Rover",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "rover": [
        {
          "id": "roverTasks",
          "name": "Tasks",
          "icon": "$(list-flat)",
          "contextualTitle": "Rover Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "rover.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rover.createTask",
        "title": "Rover: Create Task",
        "icon": "$(add)",
        "category": "Rover"
      },
      {
        "command": "rover.inspectTask",
        "title": "Inspect Task",
        "icon": "$(info)"
      },
      {
        "command": "rover.deleteTask",
        "title": "Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "rover.shell",
        "title": "Open Shell",
        "icon": "$(terminal)"
      },
      {
        "command": "rover.logs",
        "title": "View Logs",
        "icon": "$(output)"
      },
      {
        "command": "rover.openWorkspace",
        "title": "Open Workspace",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rover.refresh",
          "when": "view == roverTasks",
          "group": "navigation@1"
        },
        {
          "command": "rover.createTask",
          "when": "view == roverTasks",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "rover.inspectTask",
          "when": "view == roverTasks",
          "group": "inline@1"
        },
        {
          "command": "rover.shell",
          "when": "view == roverTasks && viewItem =~ /task-running/",
          "group": "inline@2"
        },
        {
          "command": "rover.logs",
          "when": "view == roverTasks",
          "group": "inline@3"
        },
        {
          "command": "rover.openWorkspace",
          "when": "view == roverTasks",
          "group": "inline@4"
        },
        {
          "command": "rover.deleteTask",
          "when": "view == roverTasks",
          "group": "management"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}