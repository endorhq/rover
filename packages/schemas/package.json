{
  "name": "rover-schemas",
  "version": "1.0.0",
  "private": true,
  "description": "Define project file schemas and utilities to manage them",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "type": "module",
  "files": ["LICENSE.md", "dist/*"],
  "scripts": {
    "build": "tsdown --env.TSUP_DEV=false src/index.ts",
    "build-dev": "tsdown --env.TSUP_DEV=true src/index.ts",
    "dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --watch src/ src/index.ts",
    "start": "echo 'Schemas package is not a CLI'",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "test": "echo 'No tests for schemas package'",
    "test:watch": "echo 'No tests for schemas package'",
    "test:ui": "echo 'No tests for schemas package'",
    "test:coverage": "echo 'No tests for schemas package'"
  },
  "author": "The Endor team",
  "dependencies": {
    "zod": "catalog:runtime"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitest/ui": "^2.1.8",
    "tsdown": "catalog:build",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
