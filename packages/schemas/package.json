{
  "name": "rover-schemas",
  "version": "1.0.0",
  "description": "Define project file schemas and utilities to manage them",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "LICENSE.md",
    "dist/*"
  ],
  "scripts": {
    "build": "tsdown --env.TSUP_DEV=false src/index.ts",
    "dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --watch src/ src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "author": "The Endor team",
  "dependencies": {
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitest/ui": "^2.1.8",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
