{
  "name": "rover-common",
  "version": "1.0.0",
  "description": "Provide common logic for the CLI and the VSCode extension",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown --env.TSUP_DEV=false src/index.ts",
    "dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --watch src/ src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit"
  },
  "author": "The Endor team",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/uuid": "^10.0.0",
    "ansi-colors": "^4.1.3",
    "execa": "^9.6.0",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3"
  }
}
