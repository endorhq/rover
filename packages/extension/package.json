{
  "name": "endor-rover",
  "displayName": "Rover",
  "description": "Collaborate with AI agents to complete any task",
  "version": "0.0.0-dev",
  "publisher": "endor",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": ["Other", "Programming Languages"],
  "icon": "./assets/logo.png",
  "main": "./dist/extension.js",
  "author": "Endor Team <hello@endor.dev>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/endorhq/rover.git",
    "directory": "packages/extension"
  },
  "contributes": {
    "configuration": {
      "title": "Rover",
      "properties": {
        "rover.cliPath": {
          "type": "string",
          "default": "rover",
          "description": "Path to the Rover CLI executable"
        },
        "rover.autoRefreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds (0 to disable)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rover",
          "title": "Rover",
          "icon": "assets/icons/bar.svg"
        }
      ]
    },
    "views": {
      "rover": [
        {
          "id": "roverTasks",
          "name": "Tasks",
          "type": "webview",
          "icon": "$(list-flat)",
          "contextualTitle": "Rover Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "rover.refresh",
        "title": "Refresh Tasks",
        "icon": "$(refresh)",
        "category": "Rover"
      },
      {
        "command": "rover.createTask",
        "title": "Create Task",
        "icon": "$(add)",
        "category": "Rover"
      },
      {
        "command": "rover.inspectTask",
        "title": "Inspect Task",
        "icon": "$(info)",
        "category": "Rover"
      },
      {
        "command": "rover.iterateTask",
        "title": "Iterate a task with new instructions",
        "icon": "$(info)",
        "category": "Rover"
      },
      {
        "command": "rover.gitCompareTask",
        "title": "Git Compare Task Workspace",
        "icon": "$(info)",
        "category": "Rover"
      },
      {
        "command": "rover.pushBranch",
        "title": "Push a task branch",
        "icon": "$(info)",
        "category": "Rover"
      },
      {
        "command": "rover.mergeTask",
        "title": "Merge a task into current branch",
        "icon": "$(info)",
        "category": "Rover"
      },
      {
        "command": "rover.deleteTask",
        "title": "Delete Task",
        "icon": "$(trash)",
        "category": "Rover"
      },
      {
        "command": "rover.shell",
        "title": "Open Task Shell",
        "icon": "$(terminal)",
        "category": "Rover"
      },
      {
        "command": "rover.logs",
        "title": "View Task Logs",
        "icon": "$(output)",
        "category": "Rover"
      },
      {
        "command": "rover.openWorkspace",
        "title": "Open Task Workspace",
        "icon": "$(folder-opened)",
        "category": "Rover"
      },
      {
        "command": "rover.createTaskFromGitHub",
        "title": "Create Task from GitHub Issue",
        "icon": "$(github)",
        "category": "Rover"
      },
      {
        "command": "rover.install",
        "title": "Install Rover CLI",
        "icon": "$(cloud-download)",
        "category": "Rover"
      },
      {
        "command": "rover.init",
        "title": "Initialize Rover",
        "icon": "$(rocket)",
        "category": "Rover"
      },
      {
        "command": "rover.showSetupGuide",
        "title": "Show Setup Guide",
        "icon": "$(question)",
        "category": "Rover"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rover.refresh",
          "when": "view == roverTasks",
          "group": "navigation@1"
        },
        {
          "command": "rover.createTask",
          "when": "view == roverTasks",
          "group": "navigation@2"
        },
        {
          "command": "rover.createTaskFromGitHub",
          "when": "view == roverTasks",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "rover.inspectTask",
          "when": "view == roverTasks",
          "group": "inline@1"
        },
        {
          "command": "rover.shell",
          "when": "view == roverTasks && viewItem =~ /task-running/",
          "group": "inline@2"
        },
        {
          "command": "rover.logs",
          "when": "view == roverTasks",
          "group": "inline@3"
        },
        {
          "command": "rover.openWorkspace",
          "when": "view == roverTasks",
          "group": "inline@4"
        },
        {
          "command": "rover.deleteTask",
          "when": "view == roverTasks",
          "group": "management"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm compile",
    "build": "node esbuild.mjs --production",
    "build-dev": "node esbuild.mjs",
    "compile": "pnpm check && pnpm build",
    "watch": "pnpm -r run watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpx @vscode/vsce package --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm compile-tests && pnpm compile",
    "check": "tsc --noEmit",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "catalog:build",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "rover-core": "workspace:*",
    "rover-telemetry": "workspace:*",
    "typescript": "catalog:build"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.39",
    "execa": "catalog:runtime",
    "lit": "^3.3.1"
  }
}
