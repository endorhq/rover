{
  "name": "@endorhq/rover",
  "version": "0.0.0-dev",
  "description": "A manager for AI coding agents that works with Claude Code, Gemini, and Qwen.",
  "main": "dist/index.mjs",
  "type": "module",
  "bin": {
    "rover": "dist/index.mjs"
  },
  "license": "Apache-2.0",
  "keywords": [
    "CLI",
    "Endor",
    "AI Agents",
    "AI",
    "Coding Agents",
    "AI Coding Agents",
    "Gemini",
    "Qwen",
    "Codex",
    "Claude",
    "Claude Code",
    "MCP"
  ],
  "author": "Endor Team <hello@endor.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/endorhq/rover.git",
    "directory": "packages/cli"
  },
  "files": ["README.md", "LICENSE.md", "dist/*"],
  "scripts": {
    "build": "tsdown --config-loader unrun",
    "build-dev": "TSUP_DEV=true tsdown --config-loader unrun",
    "dev": "TSUP_DEV=true tsdown --watch src/",
    "start": "node --enable-source-maps dist/index.mjs",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "package": "pnpm pack",
    "test": "vitest --run --silent",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "e2e-test": "pnpm build && vitest --config vitest.e2e.config.ts --run",
    "e2e-test:mock": "pnpm build && vitest --config vitest.e2e.config.ts --run",
    "e2e-test:real": "pnpm build && ROVER_E2E_REAL_AGENT=true vitest --config vitest.e2e.config.ts --run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "ansi-colors": "catalog:runtime",
    "commander": "catalog:runtime",
    "dotenv": "^16.4.7",
    "enquirer": "^2.4.1",
    "nanoid": "^5.0.9",
    "ora": "^8.2.0",
    "pupa": "^3.3.0",
    "tmp": "^0.2.5",
    "yocto-spinner": "^1.0.0",
    "zod": "catalog:runtime"
  },
  "devDependencies": {
    "@types/node": "catalog:build",
    "@types/tmp": "^0.2.6",
    "@vitest/ui": "catalog:build",
    "execa": "catalog:runtime",
    "rover-core": "workspace:*",
    "rover-schemas": "workspace:*",
    "rover-telemetry": "workspace:*",
    "tsdown": "catalog:build",
    "typescript": "catalog:build",
    "vitest": "catalog:build"
  }
}
