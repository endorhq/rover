{
  "name": "@endorhq/agent",
  "private": true,
  "version": "0.0.0-dev",
  "description": "Provide a library to define and manage AI agent workflows for Rover",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "rover-agent": "dist/cli.js"
  },
  "files": [
    "LICENSE.md",
    "dist/*"
  ],
  "scripts": {
    "build": "tsdown --env.TSUP_DEV=false",
    "build-dev": "tsdown --env.TSUP_DEV=true",
    "dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --watch src/",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "author": "The Endor team",
  "dependencies": {
    "yaml": "^2.8.1",
    "ansi-colors": "^4.1.3",
    "commander": "^14.0.0",
    "execa": "catalog:runtime",
    "ora": "^8.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "rover-core": "workspace:*",
    "rover-schemas": "workspace:*",
    "@types/node": "^24.1.0",
    "@vitest/ui": "^2.1.8",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
