{
  "name": "rover-core",
  "version": "1.0.0",
  "private": true,
  "description": "Provide common logic for the CLI and the VSCode extension",
  "main": "dist/index.mjs",
  "types": "src/index.ts",
  "type": "module",
  "files": ["LICENSE.md", "dist/*"],
  "scripts": {
    "build": "tsdown --env.TSUP_DEV=false --config-loader unrun src/index.ts",
    "build-dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --config-loader unrun src/index.ts",
    "dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --watch src/ src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "author": "The Endor team",
  "dependencies": {
    "ansi-colors": "catalog:runtime",
    "boxen": "^8.0.1",
    "execa": "catalog:runtime",
    "log-update": "^7.0.1",
    "rover-schemas": "workspace:*",
    "rover-telemetry": "workspace:*",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "catalog:build",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "catalog:build",
    "tsdown": "catalog:build",
    "typescript": "catalog:build",
    "vitest": "catalog:build"
  }
}
