{
  "name": "rover-core",
  "version": "1.0.0",
  "description": "Provide common logic for the CLI and the VSCode extension",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "type": "module",
  "files": [
    "LICENSE.md",
    "dist/*"
  ],
  "scripts": {
    "build": "tsdown --env.TSUP_DEV=false src/index.ts",
    "build-dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true src/index.ts",
    "dev": "TSUP_DEV=true tsdown --env.TSUP_DEV=true --watch src/ src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "author": "The Endor team",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "boxen": "^8.0.1",
    "execa": "catalog:runtime",
    "log-update": "^7.0.1",
    "rover-schemas": "workspace:*",
    "rover-telemetry": "workspace:*",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^2.1.8",
    "tsdown": "catalog:build",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
